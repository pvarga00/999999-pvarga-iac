{
    "containerDefinitions": [
        {
            "name": "${TASK_NAME}",
            "image": "${ECR_URL}",
            "cpu": 128,
            "memoryReservation": 256,
            "essential": true,
            "environment": [],
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 0
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "${TASK_NAME}",
                    "awslogs-region": "${TASK_REGION}",
                    "awslogs-stream-prefix": "ecslogs"
                }
            }
        }
    ],
    "family": "${TASK_NAME}",
    "taskRoleArn": "${TASK_ROLE_ARN}"
}
